<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="168dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/SeekBar_Vertex"
                android:layout_width="369dp"
                android:layout_height="36dp"
                android:min="1"
                android:max="1"
                android:progress="1"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/TextView_Vertex"
                android:layout_width="378dp"
                android:layout_height="50dp"
                android:text="None"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/SeekBar_ConnectWith"
                android:layout_width="369dp"
                android:layout_height="36dp"
                android:min="1"
                android:max="1"
                android:progress="1"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/Button_ConnectVertex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Połącz z" />

            <Button
                android:id="@+id/Button_DisconnectVertex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rozłącz z" />

            <EditText
                android:id="@+id/EditText_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />
            <Button
                android:id="@+id/Button_AddDataToVertex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodaj tekst" />

            <Button
                android:id="@+id/button_BFS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BFS" />

            <Button
                android:id="@+id/button_DFS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DFS" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>